            <input class="form-check-input" type="checkbox" value="" id="@user.Id">
            <label class="form-check-label" for="@user.Id">
                @user.UserName
            </label>
        </div>
    }
    @foreach (var user in UserManager.GetUsersInRoleAsync("Administrator").GetAwaiter().GetResult())
    {
        <div class="form-check">
            <input class="input" type="checkbox" value="" id="@user.Id" checked>
            <label class="form-check-label" for="@user.Id">
                @user.UserName
            </label>
