@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevsWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("heads", required: false)
</head>
<body style="background: #161b22">
    <header class="site-header d-flex justify-content-between flex-wrap">
        <div class="left-side-header d-flex align-items-center">
            <a href="/"><h2>Development Team</h2></a>
            <h4 class="m-0 pl-2 font-italic" id="version"></h4>
        </div>
        <div class="right-side-header d-flex">
            <div>
                <a asp-area="" asp-page="/Search"> <button type="button" class="btn btn-dark mr-3"> Search in Git </button> </a>
            </div>
            @if (SignInManager.IsSignedIn(User))
            {
                @if (User.IsInRole("TeamLead"))
                {
                    <div>
                        <a href="/developers"><button type="button" class="btn btn-dark mr-3">Manage Team</button></a>
                    </div>
                }
                @if (User.IsInRole("Administrator"))
                {
                    <div>
                        <a href="/users"> <button type="button" class="btn btn-dark mr-3"> Manage Users </button></a>
                    </div>
                }
            }
            <div>
                <a asp-area="" asp-page="/Statistics"> <button type="button" class="btn btn-dark mr-3">Statistics</button></a>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </header>
    <div class="container">
        <div id="alerts">

        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #0d1117 !important;
        }

        .left-side-header a {
            color: white;
            text-decoration: none;
        }

        .site-header {
            background-color: #161b22;
            color: #f0f6fc;
            padding: 20px;
        }

        .search {
            flex: 0 0 30%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search__input {
            width: 90%;
            border-radius: 15px;
            background-color: #0d1117;
            border: none;
            outline: none;
            padding: 8px;
            padding-left: 13px;
            font-weight: 400;
            font-family: "Lato", sans-serif;
            color: #c1baba;
            transition: width 0.5s ease-out;
        }

            .search__input::placeholder {
                color: #969090;
            }

            .search__input:focus {
                width: 100%;
            }

        .search__icon {
            height: 22px;
        }

            .search__icon:active {
                transform: translateY(2px);
            }
    </style>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="./lib/microsoft-signalr/signalr.min.js"></script>
    <script src="~/js/version.js"></script>
    <script src="~/js/popup.js"></script>

</body>
</html>
