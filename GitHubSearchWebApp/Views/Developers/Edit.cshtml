                <input type="submit" value="Save" class="btn btn-secondary" style="background: #21262d; border: solid 1px #bdbdbd; border-radius: 5px; color: #e0e0e0"/>
            </div>
        </form>
    </div>
</div>
<hr style="border-color: #bdbdbd" />
<div>
    <a asp-action="Index" style="color: #3e9eff;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
