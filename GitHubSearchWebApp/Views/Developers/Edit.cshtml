                <input asp-for="FullName" class="form-control" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px;" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GitLogin" class="control-label" style="color: #9e9e9e"></label>
                <input asp-for="GitLogin" class="form-control" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px;" />
                <span asp-validation-for="GitLogin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" style="color: #9e9e9e"></label>
                <input asp-for="Email" class="form-control" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px;" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
