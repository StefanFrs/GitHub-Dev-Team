@model DevsWebApp.Models.Developer

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center display-4 my-4" style="color: #757575">Edit</h1>

<h4 class="heading-4" style="color: #3e9eff;">Developer</h4>
<hr style="border-color: #bdbdbd" />
<div class="row  my-5">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
