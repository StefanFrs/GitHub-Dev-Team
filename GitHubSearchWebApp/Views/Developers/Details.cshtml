@model GitHubSearchWebApp.Models.Developer

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center display-4 my-4" style="color: #757575">Details</h1>


<h4 class="heading-4" style="color: #3e9eff;">Developer</h4>
<hr style="border-color: #bdbdbd" />
<div>
    <dl class="row  my-5">
        <dt class="col-sm-2" style="color: #9e9e9e">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px; color: #bdbdbd">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2" style="color: #9e9e9e">
            @Html.DisplayNameFor(model => model.GitLogin)
        </dt>
        <dd class="col-sm-10" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px; color: #bdbdbd">
            @Html.DisplayFor(model => model.GitLogin)
        </dd>
        <dt class="col-sm-2" style="color: #9e9e9e">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10" style="background: #0d1117; border: solid 1px #616161; border-radius: 7px; color: #bdbdbd">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<hr style="border-color: #bdbdbd" />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" style="color: #3e9eff;">Edit</a> |
    <a asp-action="Index" style="color: #3e9eff;">Back to List</a>
</div>
